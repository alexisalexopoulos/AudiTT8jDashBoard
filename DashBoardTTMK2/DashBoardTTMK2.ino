  u8g2.firstPage();
    do {
      u8g2.setFont(u8g2_font_roentgen_nbp_t_all);
      u8g2.drawStr(0,15,"Reconnecting");
    } while ( u8g2.nextPage() );
      delay(1000);
  //digitalWrite(SD_CS_PIN, LOW);
  for (uint16_t i = 0; !obd.init(); i++) {
    if (i == 5) {
      //Turn off Led
      digitalWrite(ledPin, LOW);
      delay(3000);
      u8g2.clear();
    }
  }
}

